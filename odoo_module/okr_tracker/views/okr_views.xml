<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="view_okr_node_tree" model="ir.ui.view">
            <field name="name">okr.node.tree</field>
            <field name="model">okr.node</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="node_type"/>
                    <field name="progress"/>
                    <field name="user_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_okr_node_form" model="ir.ui.view">
            <field name="name">okr.node.form</field>
            <field name="model">okr.node</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="node_type"/>
                            <field name="description"/>
                            <field name="progress"/>
                            <field name="parent_id"/>
                            <field name="user_id"/>
                        </group>
                        <notebook>
                            <page string="Children">
                                <field name="child_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="node_type"/>
                                        <field name="progress"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_okr_node" model="ir.actions.act_window">
            <field name="name">OKR Nodes</field>
            <field name="res_model">okr.node</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>